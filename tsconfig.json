{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": ["es6", "dom"],
      "allowJs": true,
      "jsx": "react",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]   
      },
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "strictNullChecks": true
  },
  "include": [
      "src/**/*"
  ],
  "types": [
    "typePatches"
  ]
}